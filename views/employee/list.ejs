<%- include('../partials/head') %>
<h3>
    <a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Novo Integrante</a>
    Lista da Vaza Jato
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Celular</th>
            <th>Localização</th>
            <th>Delação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for(var i = 0; i < list.length; i++) {%>
        <tr>
            <td><%= list[i].fullName %></td>
            <td><%= list[i].email %></td>
            <td><%= list[i].mobile %></td>
            <td><%= list[i].city %>, <%= list[i].estado %></td>
            <td><%= list[i].delacao %></td>
            <td>
                <a href="/employee/<%= list[i]._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/<%= list[i]._id %>"
                    onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
<%- include('../partials/footer') %>